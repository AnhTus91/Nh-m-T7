@model CNPMNC_Giao.Models.TaiKhoan
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" />
<div class="row justify-content-md-center">
    <div class="col-md-4">
        @using (Html.BeginForm("Register", "User", FormMethod.Post))
        {
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3 class="card-title">Đăng ký tài khoản</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email dùng đăng nhập" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.MatKhau)
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "badge badge-danger" })
                    </div>

                    <div class="form-group d-none">
                        <input class="d-none" value="1" name="roleID" />
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success btn-block">Đăng ký</button>
                    </div>

                    <label class="col-12 text-center">Đã có tài khoản?</label>

                    <div class="form-group text-center">
                        <a role="button" href="/user/login" class="btn btn-info btn-block">Đăng nhập</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- CSS cho form đăng ký -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f9fc;
        margin-top:180px
    }

    .card {
        border-radius: 10px;
        border: none;
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        padding: 15px;
        border-bottom: none;
    }

    .card-title {
        margin: 0;
        font-size: 1.5rem;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 1rem;
        box-shadow: none;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .btn-block {
        padding: 10px;
        font-size: 1.1rem;
        border-radius: 5px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

    .btn-info {
        background-color: #17a2b8;
        border: none;
    }

        .btn-info:hover {
            background-color: #138496;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

    .badge-danger {
        background-color: #dc3545;
        color: white;
    }
</style>
