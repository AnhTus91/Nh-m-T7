    ViewBag.Title = "Details";
}

<style>
    .container {
        width: 80%;
        margin: 0 auto;
        margin-top: 10px;
    }

    .product-info {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .product-images {
        width: 50%; /* Increased image section width */
        position: relative;
    }

    .product-details {
        width: 40%; /* Adjusted product details width */
        padding: 20px; /* Added padding for spacing */
        margin-top: 10px;
    }

        .product-details p {
            margin-bottom: 5px; /* Added spacing between paragraphs */
        }

        .product-details button {
            margin-right: 10px; /* Spacing between buttons */
            padding: 10px 15px; /* Increased button size */
            border: none;
            border-radius: 5px;
            background-color: orange; /* Button background color */
            color: white;
            cursor: pointer;
            font-size: 16px; /* Increased font size */
            margin-top: 10px;
        }

            .product-details button:hover {
                background-color: darkorange; /* Darker shade on hover */
            }

    .description {
        margin-top: 5px;
    }

    .reviews {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .rating {
        display: flex;
        align-items: center;
    }

    .star {
        cursor: pointer;
        font-size: 24px;
        color: #ccc;
    }

        .star:hover, .star:hover ~ .star {
            color: orange;
        }

        .star.selected {
            color: orange;
        }
</style>

