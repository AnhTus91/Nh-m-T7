@model List<CNPMNC_Giao.Models.SanPham>
<style>

    .slider-container {
        position: relative;
        max-width: 100%;
        overflow: hidden;
    }

    .slider {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .slide {
        min-width: 100%;
    }

        .slide img {
            width: 100%;
            height: auto;
        }

    .slider-controls .prev, .slider-controls .next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0,0,0,0.5);
        color: white;
        padding: 10px;
        cursor: pointer;
    }

    .slider-controls .prev {
        left: 10px;
    }

    .slider-controls .next {
        right: 10px;
    }

    h2.title {
        margin-top: 20px
    }
</style>

<div class="slider-container">
    <div class="slider">
        <div class="slide">
            <img src="~/images/banner.jpg" alt="Banner 1">
        </div>
        <div class="slide">
            <img src="~/images/banner.jpg" alt="Banner 2">
        </div>
        <div class="slide">
            <img src="~/images/banner.jpg" alt="Banner 3">
        </div>
    </div>
    <div class="slider-controls">
        <span class="prev" onclick="moveSlide(-1)">&#10094;</span>
        <span class="next" onclick="moveSlide(1)">&#10095;</span>
    </div>
</div>

<script>
    let currentSlide = 0;
    const slides = document.querySelectorAll('.slide');
    const totalSlides = slides.length; // Số lượng slide chính xác

    function moveSlide(direction) {
        currentSlide = (currentSlide + direction + totalSlides) % totalSlides; // Đảm bảo không vượt quá slide cuối
        document.querySelector('.slider').style.transform = `translateX(-${currentSlide * 100}%)`;
    }

    // Tự động chuyển slide sau mỗi 4 giây
    setInterval(() => {
        moveSlide(1);
    }, 4000);

</script>
<div class="features_items">
    <h2 class="title text-center">Sản phẩm mới</h2>

    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">

                        <a href="@Url.Action("Details", "Product", new { id = item.MaSanPham })">

                            <img src="~/AnhSanPham/@item.AnhSP" alt="@item.TenSanPham" style="width: 250px; height: 250px;" />
                            <h2>@string.Format("{0:C}", item.GiaTienMoi) VND</h2>
                            <p>@item.TenSanPham</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div><!--features_items-->


<h2 class="title text-center">Recommended Items</h2>





